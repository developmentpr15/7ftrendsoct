# 7ftrends Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Backend API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# Feature Flags
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# Development Settings
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_LOG_LEVEL=info

# Image Upload Settings
EXPO_PUBLIC_MAX_IMAGE_SIZE=5242880
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=jpeg,png,webp

# Social Features
EXPO_PUBLIC_MAX_STORY_DURATION=86400000
EXPO_PUBLIC_MAX_COMPETITION_DURATION=604800000

# Performance Settings
EXPO_PUBLIC_CACHE_SIZE=50
EXPO_PUBLIC_LAZY_LOAD_THRESHOLD=10

# Security
EXPO_PUBLIC_RATE_LIMIT_MAX=100
EXPO_PUBLIC_RATE_LIMIT_WINDOW=900000

# AI Services (if using external AI)
EXPO_PUBLIC_GEMINI_API_KEY=your-gemini-api-key
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key

# Notification Services
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
EXPO_PUBLIC_FIREBASE_MESSAGE_SENDER_ID=your-sender-id

# Analytics Services
EXPO_PUBLIC_ANALYTICS_API_KEY=your-analytics-api-key
EXPO_PUBLIC_CRASHLYTICS_API_KEY=your-crashlytics-key